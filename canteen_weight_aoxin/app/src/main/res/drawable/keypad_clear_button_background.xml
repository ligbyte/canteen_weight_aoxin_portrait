<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFEC7063"
                android:endColor="#FFE74C3C"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#FFE74C3C" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFF1948A"
                android:endColor="#FFEC7063"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#FFE74C3C" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>