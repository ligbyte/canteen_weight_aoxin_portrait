<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_88000000"
    android:clickable="true">

    <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        app:radiusT="@dimen/dp_5"
        app:solidColorT="@color/color_161E35">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_11">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_dialog_close_black" />

        </RelativeLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@null"
            android:includeFontPadding="false"
            android:text="今日营业额:"
            android:textColorHint="#80ffffff"
            android:maxHeight="@dimen/dp_100"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_alert_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@null"
            android:includeFontPadding="false"
            android:text="3248.50"
            android:textColorHint="#80ffffff"
            android:maxHeight="@dimen/dp_100"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:background="@null"
            android:includeFontPadding="false"
            android:text="元"
            android:textColorHint="#80ffffff"
            android:textColor="#80FFFFFF"
            android:textSize="@dimen/sp_8"
            android:textStyle="normal" />

    </LinearLayout>
        <TextView
            android:id="@+id/tv_pwd_error_tips"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:gravity="left"
            android:text="营业额(元)"
            android:textColor="#80FFFFFF"
            android:textSize="@dimen/sp_8"
            android:background="@null"/>

        <com.stkj.aoxin.weight.home.ui.widget.charview.ChartBarView
            android:id="@+id/chartbarview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            app:axis_align="SINGLE_LEFT"
            app:axis_line_color="#1AFFFFFF"
            app:axis_line_height="1px"
            app:bottom_height="25dp" />


    </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

</FrameLayout>