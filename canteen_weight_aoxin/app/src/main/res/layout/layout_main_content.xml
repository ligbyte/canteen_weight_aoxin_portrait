<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="130"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginLeft="1px">

    <!-- 签收类型区域 -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_single_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_21"
            android:button="@drawable/radio_button_selector"
            android:checked="true"
            android:paddingStart="8dp"
            android:text="单次称重签收"
            android:textColor="@color/radio_text_color"
            android:textSize="@dimen/sp_9" />

        <RadioButton
            android:id="@+id/rb_multiple_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_21"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="8dp"
            android:text="分次称重签收"
            android:textColor="@color/radio_text_color"
            android:textSize="@dimen/sp_9" />

        <RadioButton
            android:id="@+id/rb_quantity_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="8dp"
            android:text="按数量签收"
            android:textColor="@color/radio_text_color"
            android:textSize="@dimen/sp_9" />

    </RadioGroup>

    <!-- 商品信息区域 -->
    <LinearLayout
        android:id="@+id/ll_goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <!-- 商品图片 -->
        <com.stkj.common.ui.widget.common.RoundImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:scaleType="centerCrop"
            app:type="round"
            app:srcCompat="@mipmap/ic_cai_default"
            app:corner_radius="@dimen/dp_5"/>

        <!-- 商品信息 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_name"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_product_name"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_product_brand"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/package_format"
                        android:textSize="19sp"
                        android:textColor="@color/color_1D2129" />


                    <TextView
                        android:id="@+id/tv_product_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/package_format"
                        android:textSize="19sp"
                        android:textColor="@color/color_1D2129"
                        android:layout_marginLeft="@dimen/dp_10" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_product_name"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_5">


                    <TextView
                        android:id="@+id/tv_product_addr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/pricing_unit"
                        android:textSize="19sp"
                        android:textColor="@color/color_1D2129" />

                    <TextView
                        android:id="@+id/tv_product_level"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/unit_price"
                        android:textSize="19sp"
                        android:textColor="@color/color_1D2129"
                        android:layout_marginLeft="@dimen/dp_10" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:gravity="top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Currency symbol ¥ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/price_red"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp" />

                <!-- Price number 8.30 -->
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/price_red"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <!-- Unit text 元/公斤 -->
                <TextView
                    android:id="@+id/tv_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/公斤"
                    android:textColor="@color/price_red"
                    android:textSize="19sp"
                    android:alpha="0.7" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <!-- 重量输入和拍照区域 -->
    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_goods_info"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="@dimen/dp_15">

        <!-- 左侧重量输入区 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_12">

            <!-- 复核毛重 -->
            <include layout="@layout/layout_weight_input" />

        </LinearLayout>

        <!-- 右侧拍照区 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_12">

            <!-- 商品照片 -->
            <include layout="@layout/layout_photo_section" />

        </LinearLayout>

    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_input"
        android:layout_above="@+id/ll_bottom_btn"
        layout="@layout/layout_review_details" />



    <!-- 底部操作按钮 -->
    <LinearLayout
        android:id="@+id/ll_bottom_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_28"
            android:text="@string/cancel"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/text_secondary"
            android:textAllCaps="false"
            android:background="@drawable/button_cancel_selector"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_return_exchange"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_28"
            android:text="@string/return_exchange"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_confirm_selector" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_check_ruku"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_28"
            android:text="入库签收"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:background="@drawable/button_confirm_selector" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_check_use"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_28"
            android:text="领用签收"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:visibility="gone"
            android:background="@drawable/button_confirm_selector" />

    </LinearLayout>


</RelativeLayout>