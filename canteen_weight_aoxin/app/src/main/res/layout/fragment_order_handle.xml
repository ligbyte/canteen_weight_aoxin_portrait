<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_pay_second_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
        android:id="@+id/sll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:radiusT="@dimen/dp_0"
        app:solidColorT="@color/color_e8f3ff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="下单时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="订单编号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="订单金额"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8" />



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发起人"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="接单时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8" />



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="供货单位"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单状态"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8" />

    </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>


    <com.stkj.aoxin.weight.base.ui.widget.AppSmartRefreshLayout
        android:id="@+id/srl_record_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sll_title">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </com.stkj.aoxin.weight.base.ui.widget.AppSmartRefreshLayout>

</RelativeLayout>
