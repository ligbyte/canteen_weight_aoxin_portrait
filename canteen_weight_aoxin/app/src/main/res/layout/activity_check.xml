<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home.ui.activity.MainActivity">
<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light_gray">

    <!-- 头部导航栏 -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_33"
        android:orientation="horizontal"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_order_back"
            android:padding="4dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_back"
            android:text="@string/order_review_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp_5" />

        <TextView
            android:id="@+id/tv_weight_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:text="置零"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/text_primary"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/dp_5" />


    </RelativeLayout>

    <!-- 主体内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 左侧分类菜单 -->
        <include layout="@layout/layout_category_menu" />

        <!-- 中间内容区域 -->
        <include layout="@layout/layout_main_content" />

        <LinearLayout
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/white"
            android:orientation="horizontal">
        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_25"
            android:background="@color/color_E5E6EB" />

        </LinearLayout>


        <!-- 右侧复核详情 -->
        <include layout="@layout/layout_review_details" />

    </LinearLayout>


</LinearLayout>

    <FrameLayout
        android:id="@+id/fl_check_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
        android:id="@+id/ll_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_86"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_gravity="bottom"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:radiusT="@dimen/dp_5"
        app:solidColorT="#eaf1f9">

        <com.stkj.aoxin.weight.pay.ui.weight.HandCalculator
            android:id="@+id/hc_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:background="#eaf1f9"
            app:sc_confirm_txt="确认" />
    </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

</FrameLayout>