<?xml version="1.0" encoding="utf-8"?>
<com.stkj.common.ui.widget.linelayout.LineLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_32"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/selector_item_sale_list"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    app:line_bottom="true"
    app:line_color="@color/color_EDF0F5"
    app:line_width="1px">

    <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="2025-09-19 11:03"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_8" />

    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="1122334455"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_8" />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:text="100.00"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_8" />



    <TextView
        android:id="@+id/tv_order_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="李军"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_8" />

    <TextView
        android:id="@+id/tv_order_create_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="2025-09-19 11:03"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_8" />



    <TextView
        android:id="@+id/tv_commany"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="牧原食品股份有限公司"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_8" />


    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="待签收"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_8" />


    <TextView
        android:id="@+id/tv_qianshou"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="签收"
        android:textColor="#0087FA"
        android:textSize="@dimen/sp_8" />


</com.stkj.common.ui.widget.linelayout.LineLinearLayout>