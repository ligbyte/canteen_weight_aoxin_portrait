<?xml version="1.0" encoding="utf-8"?>
<com.stkj.common.ui.widget.linelayout.LineLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginTop="@dimen/dp_8"
    android:padding="@dimen/dp_10"
    android:orientation="vertical"
    android:background="@drawable/selector_item_sale_list"
    app:line_bottom="true"
    app:line_color="@color/color_EDF0F5"
    app:line_width="1px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">
    <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-09-19 11:03"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#0087FA"
            android:text="待签收"
            android:textSize="@dimen/sp_9" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@null">
    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1122334455"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_9" />


        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="100.00"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:textSize="@dimen/sp_9" />


    </RelativeLayout>



    <TextView
        android:id="@+id/tv_order_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="李军"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_9" />

    <TextView
        android:id="@+id/tv_order_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-09-19 11:03"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_9"
        android:visibility="gone"/>



    <TextView
        android:id="@+id/tv_commany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="牧原食品股份有限公司"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_9" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_E5E6EB" />



    <TextView
        android:id="@+id/tv_qianshou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="right"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/button_background_blue"
        android:text="签收"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_9" />


</com.stkj.common.ui.widget.linelayout.LineLinearLayout>