<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签收确认"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="16dp" />

            <!-- Order Info -->
            <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="@color/color_e8f3ff"
                android:layout_marginTop="@dimen/dp_3"
                android:padding="@dimen/dp_7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单时间：2025-09-22 18:35:36"
                    android:textColor="@color/color_3D3D3D"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:id="@+id/tv_supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="供货单位：河南中农食品集团有限公司"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/color_3D3D3D"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_8" />

            </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

        </LinearLayout>

        <!-- Products List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_header"
            android:layout_marginBottom="@dimen/dp_50" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BB000000"
        android:elevation="@dimen/dp_11"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_33"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_order_back"/>


            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_back"
                android:paddingLeft="@dimen/dp_2"
                android:textSize="@dimen/sp_10"
                android:text="返回"
                android:textColor="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="图片预览"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10"
            android:layout_marginBottom="16dp" />

        </RelativeLayout>



        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_back"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:scaleType="centerInside"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_check_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <!-- Summary Section -->
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="@dimen/dp_10">

        <!-- Statistics -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单金额：¥799.66"
                    android:textColor="@color/color_3D3D3D"
                    android:textSize="@dimen/sp_9"
                    android:layout_marginRight="32dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_verified_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复核金额：¥599.66"
                    android:textColor="@color/button_blue"
                    android:textSize="@dimen/sp_9"
                    android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品数量：3"
                    android:textColor="@color/color_3D3D3D"
                    android:textSize="@dimen/sp_9"
                    android:layout_marginRight="32dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_verified_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签收数量：2"
                    android:textColor="@color/color_3D3D3D"
                    android:textSize="@dimen/sp_9"
                    android:layout_marginRight="32dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_return_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退货数量：0"
                    android:textColor="@color/color_3D3D3D"
                    android:textSize="@dimen/sp_9"
                    android:layout_marginRight="48dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Confirm Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_27"
            android:background="@drawable/button_background"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>