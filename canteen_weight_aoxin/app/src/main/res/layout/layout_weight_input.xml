<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 复核毛重 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_check_maozhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review_gross_weight"
                android:textSize="@dimen/sp_9"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_gross_weight"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/weight_input_bg"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_gross_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

        </LinearLayout>




    </LinearLayout>

    <TextView
        android:id="@+id/tv_reweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_3"
        android:paddingHorizontal="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_3"
        android:background="@drawable/button_reweight_bg"
        android:text="@string/reweight"
        android:textSize="@dimen/sp_8"
        android:textColor="@color/text_blue"
        android:clickable="true"
        android:focusable="true" />



    <!-- 复核皮重 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_23">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_review_tare_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review_tare_weight"
                android:textSize="@dimen/sp_9"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_trae_weight"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/tare_weight_input_bg"
            android:layout_marginTop="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_tare_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_hint"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:textColor="@color/text_hint" />

        </LinearLayout>


    </LinearLayout>


    <!-- 签收类型区域 -->
    <RadioGroup
        android:id="@+id/radioGroupQuPi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_0">



        <RadioButton
            android:id="@+id/rb_qupi_shoudong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:paddingHorizontal="@dimen/dp_5"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/radio_bg_color"
            android:button="@null"
            android:text="手动去皮"
            android:textColor="@color/radio_text_color"
            android:textSize="@dimen/sp_8" />

        <RadioButton
            android:id="@+id/rb_qupi_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:paddingHorizontal="@dimen/dp_5"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/radio_bg_color"
            android:button="@null"
            android:text="免皮重"
            android:textColor="@color/radio_text_color"
            android:textSize="@dimen/sp_8" />

        <RadioButton
            android:id="@+id/rb_qupi_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:paddingHorizontal="@dimen/dp_5"
            android:paddingVertical="@dimen/dp_3"
            android:background="@drawable/radio_bg_color"
            android:text="整装去皮"
            android:textColor="@color/radio_text_color"
            android:textSize="@dimen/sp_8" />


    </RadioGroup>
</LinearLayout>