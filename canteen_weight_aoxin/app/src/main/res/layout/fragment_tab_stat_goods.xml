<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
        android:id="@+id/sll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        app:radiusT="@dimen/dp_5"
        app:solidColorT="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <com.stkj.common.ui.widget.linelayout.LineLinearLayout
                android:layout_width="@dimen/dp_143"
                android:layout_height="@dimen/dp_23"
                android:gravity="top"
                android:orientation="horizontal">

                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_0_5"
                    android:gravity="right|center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="日期:"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_8"
                    android:textStyle="normal"
                    app:solidColorT="@color/white"
                    app:topLeftRadiusT="@dimen/dp_4" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23">
                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:id="@+id/stv_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:singleLine="true"
                    android:text="2025-03-04"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_8"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" />

                    <ImageView
                        android:id="@+id/iv_start_date"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_8"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@mipmap/ic_date_start_end" />
            </FrameLayout>
            </com.stkj.common.ui.widget.linelayout.LineLinearLayout>

            <com.stkj.common.ui.widget.linelayout.LineLinearLayout
                android:layout_width="@dimen/dp_143"
                android:layout_height="@dimen/dp_23"
                android:gravity="top"
                android:orientation="horizontal">

                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_0_5"
                    android:gravity="right|center_vertical"
                    android:includeFontPadding="false"
                    android:text="至"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_8"
                    android:textStyle="normal"
                    app:solidColorT="@color/white"
                    app:topLeftRadiusT="@dimen/dp_4" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23">
                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:id="@+id/stv_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_11"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:singleLine="true"
                    android:text="2025-04-14"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_8"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" />
                <ImageView
                    android:id="@+id/iv_end_date"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/ic_date_start_end" />
            </FrameLayout>
            </com.stkj.common.ui.widget.linelayout.LineLinearLayout>

            <com.stkj.common.ui.widget.linelayout.LineLinearLayout
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_23"
                android:gravity="top"
                android:orientation="horizontal">

                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_0_5"
                    android:gravity="right|center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="账单类型:"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_8"
                    android:textStyle="normal"
                    app:solidColorT="@color/white"
                    app:topLeftRadiusT="@dimen/dp_4" />
                <FrameLayout
                    android:id="@+id/fl_goods_jjfs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23">
                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:id="@+id/stv_order_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:text="用户账单"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_8"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" />

                <ImageView
                    android:id="@+id/iv_goods_jjfs_arrow"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/icon_arrow_gray_down" />
                </FrameLayout>
            </com.stkj.common.ui.widget.linelayout.LineLinearLayout>


        </LinearLayout>

    </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sll_top"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_7"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_11"
            app:radiusT="@dimen/dp_5"
            app:solidColorT="@color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:radiusT="@dimen/dp_5"
                app:solidColorT="@color/color_f7f8fa">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:text="姓名"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:text="订单号"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商品件数"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="实收(元)"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_8" />



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="时间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="    操作"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_8" />

            </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

            <!-- 订单列表 -->
            <LinearLayout
                android:id="@+id/ll_order_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_55"
                    android:src="@mipmap/goods_empty_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="暂无数据"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_7" />

            </LinearLayout>
            <com.stkj.aoxin.weight.base.ui.widget.AppSmartRefreshLayout
                android:id="@+id/srl_record_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </com.stkj.aoxin.weight.base.ui.widget.AppSmartRefreshLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_30"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_30"
                        android:layout_weight="1.2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                        <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_23"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="姓名:"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_8"
                            android:textStyle="normal"
                            app:solidColorT="@color/white"
                            app:topLeftRadiusT="@dimen/dp_4" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent">
                        <com.stkj.aoxin.weight.pay.ui.weight.OrderNameAutoSearchLayout
                            android:id="@+id/set_query_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@null" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_30"
                        android:layout_weight="2"
                        android:gravity="top"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="match_parent">
                        <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_23"
                            android:layout_marginBottom="@dimen/dp_0_5"
                            android:gravity="right|center_vertical"
                            android:includeFontPadding="false"
                            android:text="订单号:"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_9"
                            android:textStyle="normal"
                            app:solidColorT="@color/white"
                            app:topLeftRadiusT="@dimen/dp_4" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent">
                        <com.stkj.aoxin.weight.pay.ui.weight.OrderNoAutoSearchLayout
                            android:id="@+id/set_query_order"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@null" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_23"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:orientation="horizontal">
                        <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                            android:id="@+id/stv_query"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_23"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="查询"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_9"
                            android:textStyle="normal"
                            app:radiusT="@dimen/dp_4"
                            app:solidColorT="@color/color_0087FA"
                            app:strokeColorT="@color/color_0087FA"
                            app:strokeWidthT="@dimen/dp_1" />

                        <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                            android:id="@+id/stv_reset"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_23"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:gravity="center"
                            android:text="重置"
                            android:textColor="@color/color_0087FA"
                            android:textSize="@dimen/sp_9"
                            android:textStyle="normal"
                            app:radiusT="@dimen/dp_4"
                            app:solidColorT="@color/white"
                            app:strokeColorT="@color/color_0087FA"
                            app:strokeWidthT="2px" />

                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>
        </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>


        <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
            android:layout_width="@dimen/dp_180"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_6"
            android:orientation="vertical"
            app:radiusT="@dimen/dp_5"
            app:solidColorT="@color/white">

            <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="本机收入汇总(按日)"
                    android:textColor="@color/color_171717"
                    android:textSize="@dimen/sp_9"
                    android:textStyle="bold" />

                <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8"
                    app:radiusT="@dimen/dp_5"
                    app:solidColorT="#F4F8FC">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/top_divider"
                            android:background="@null"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:text="收款总额"
                                android:textColor="#666666"
                                android:textSize="@dimen/sp_7"
                                android:textStyle="normal" />

                            <com.stkj.common.ui.widget.common.AutoScaleTextView
                                android:id="@+id/tv_ysze"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp_2"
                                android:singleLine="true"
                                android:text="00.00"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                app:minTextSize="@dimen/sp_7"/>


                        </LinearLayout>

                        <View
                            android:id="@+id/top_divider"
                            android:layout_width="1px"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_centerHorizontal="true"
                            android:background="#E4EBF7" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/top_divider"
                            android:background="@null"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="退款总额"
                                android:textColor="#666666"
                                android:textSize="@dimen/sp_7"
                                android:textStyle="normal" />

                            <com.stkj.common.ui.widget.common.AutoScaleTextView
                                android:id="@+id/tv_ssze"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp_2"
                                android:singleLine="true"
                                android:text="00.00"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                app:minTextSize="@dimen/sp_7"/>


                        </LinearLayout>


                        <View
                            android:id="@+id/middle_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:layout_marginRight="@dimen/dp_2"
                            android:layout_centerVertical="true"
                            android:background="#E4EBF7" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/bottom_divider"
                            android:layout_below="@+id/middle_divider"
                            android:background="@null"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="订单总数"
                                android:textColor="#666666"
                                android:textSize="@dimen/sp_7"
                                android:textStyle="normal" />

                            <com.stkj.common.ui.widget.common.AutoScaleTextView
                                android:id="@+id/tv_ddzs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp_2"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                app:minTextSize="@dimen/sp_7"/>


                        </LinearLayout>

                        <View
                            android:id="@+id/bottom_divider"
                            android:layout_width="1px"
                            android:layout_height="@dimen/dp_25"
                            android:layout_below="@+id/middle_divider"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_centerHorizontal="true"
                            android:background="#E4EBF7" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/bottom_divider"
                            android:layout_below="@+id/middle_divider"
                            android:background="@null"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="商品总数"
                                android:textColor="#666666"
                                android:textSize="@dimen/sp_7"
                                android:textStyle="normal" />

                            <com.stkj.common.ui.widget.common.AutoScaleTextView
                                android:id="@+id/tv_spzs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp_2"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                app:minTextSize="@dimen/sp_7"/>


                        </LinearLayout>



                    </RelativeLayout>


                </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

            </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

            <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                app:radiusT="@dimen/dp_5"
                app:solidColorT="@color/white">

                <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:radiusT="@dimen/dp_5"
                    app:solidColorT="@color/color_f7f8fa">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="时间"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_7" />

