<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 商品照片 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_photo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <LinearLayout
            android:id="@+id/btn_take_product_photo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <com.stkj.common.ui.widget.common.RoundImageView
                android:id="@+id/riv_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:type="round"
                app:srcCompat="@mipmap/take_photo_begin"
                app:leftBottom_corner_radius="12dp"
                app:leftTop_corner_radius="12dp"
                app:rightBottom_corner_radius="12dp"
                app:rightTop_corner_radius="12dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 包装照片 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/package_photo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <LinearLayout
            android:id="@+id/btn_take_package_photo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <com.stkj.common.ui.widget.common.RoundImageView
                android:id="@+id/riv_package"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:type="round"
                app:srcCompat="@mipmap/take_photo_default"
                app:leftBottom_corner_radius="12dp"
                app:leftTop_corner_radius="12dp"
                app:rightBottom_corner_radius="12dp"
                app:rightTop_corner_radius="12dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>