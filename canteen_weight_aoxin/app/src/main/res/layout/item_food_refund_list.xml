<?xml version="1.0" encoding="utf-8"?>
<com.stkj.common.ui.widget.linelayout.LineLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_32"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/selector_item_sale_list"
    app:line_bottom="true"
    app:line_color="@color/color_EDF0F5"
    app:line_width="@dimen/dp_0_5">

    <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        app:solidColorT="@null">

        <LinearLayout
            android:id="@+id/ll_checkbox"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_checkbox"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_goods_unselect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="全选"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_8"
                android:textStyle="normal"
                android:visibility="invisible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_refund_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:text="土豆炖牛肉"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tv_refund_count"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="5"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_refund_price"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="25.00"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_refund_ytkjs"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_refund_ytkje"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="0.00"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8"
            android:textStyle="normal" />

        <!-- 数量 -->
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_19">

                <ImageView
                    android:id="@+id/iv_count_minus"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:src="@drawable/selector_goods_storage_count_minus" />

                <TextView
                    android:id="@+id/tv_goods_count"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginRight="@dimen/dp_1"
                    android:background="@color/color_F5F5F5"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxLength="7"
                    android:text="1"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_9" />

                <ImageView
                    android:id="@+id/iv_count_plus"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:src="@drawable/selector_goods_storage_count_plus" />

                <TextView
                    android:id="@+id/tv_count_kg"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:gravity="center"
                    android:text="kg"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_9"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/et_goods_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_9"
                android:text="小计: "
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_7"
                android:textStyle="normal"
                android:visibility="gone"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_refund_ktkje"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="00.00"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8"
            android:textStyle="normal" />

    </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

</com.stkj.common.ui.widget.linelayout.LineLinearLayout>