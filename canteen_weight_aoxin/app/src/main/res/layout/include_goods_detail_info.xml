<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_11"
    android:paddingRight="@dimen/dp_11"
    android:paddingBottom="@dimen/dp_11">


    <!-- 商品信息 -->

    <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_100"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/dp_0_5"
        app:bottomLeftRadiusT="@dimen/dp_4"
        app:strokeColorT="@color/color_E8EAED"
        app:strokeWidthT="@dimen/dp_0"
        app:topLeftRadiusT="@dimen/dp_4">

        <!-- 菜品/套餐名称 -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/goods_name_summary"
                android:layout_width="@dimen/dp_78"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="*菜品/套餐名称:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <com.stkj.common.ui.widget.shapelayout.ShapeEditText
                android:id="@+id/et_goods_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入菜品/套餐名称，限定20字以内"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_8"
                app:radiusT="@dimen/dp_4"
                app:strokeColorT="@color/color_E8EAED"
                app:strokeWidthT="@dimen/dp_0_5" />

        </com.stkj.common.ui.widget.linelayout.LineLinearLayout>

        <!-- *适用餐厅: -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/goods_canting_summary"
                android:layout_width="@dimen/dp_78"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="*适用餐厅:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <com.stkj.common.ui.widget.shapelayout.ShapeEditText
                android:id="@+id/et_goods_canting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:background="@null"
                android:gravity="center_vertical"
                android:focusable="false"
                android:hint="二楼餐厅"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_8"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="#EDF0F5"
                app:strokeColorT="@color/color_E8EAED"
                app:strokeWidthT="@dimen/dp_0_5" />

        </com.stkj.common.ui.widget.linelayout.LineLinearLayout>


        <!-- *适用窗口: -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/goods_chuangkou_summary"
                android:layout_width="@dimen/dp_78"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="*适用窗口:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <com.stkj.common.ui.widget.shapelayout.ShapeEditText
                android:id="@+id/et_goods_chuangkou"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:background="@null"
                android:gravity="center_vertical"
                android:focusable="false"
                android:hint="二楼5号窗口"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_8"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="#EDF0F5"
                app:strokeColorT="@color/color_E8EAED"
                app:strokeWidthT="@dimen/dp_0_5" />

        </com.stkj.common.ui.widget.linelayout.LineLinearLayout>

        <!-- 适用餐别 -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_goods_cate_title"
                android:layout_width="@dimen/dp_78"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="*适用餐别:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <FrameLayout
                android:id="@+id/fl_goods_cate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11">

                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:id="@+id/stv_goods_cate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_8"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" />

                <ImageView
                    android:id="@+id/iv_goods_cate_arrow"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/dp_5_5"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5_5"
                    android:src="@drawable/selector_expand_arrow" />
            </FrameLayout>

        </com.stkj.common.ui.widget.linelayout.LineLinearLayout>

        <!-- 计价方式 -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_goods_jjfs_summary"
                android:layout_width="@dimen/dp_78"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="*计价方式:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <FrameLayout
                android:id="@+id/fl_goods_jjfs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11">

                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:id="@+id/stv_goods_jjfs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择计价方式"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_8"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" />

                <ImageView
                    android:id="@+id/iv_goods_jjfs_arrow"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/dp_5_5"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5_5"
                    android:src="@drawable/selector_expand_arrow" />
            </FrameLayout>

        </com.stkj.common.ui.widget.linelayout.LineLinearLayout>


        <!-- 计价规格 -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_goods_jjgg_summary"
                android:layout_width="@dimen/dp_78"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="*计价规格:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <FrameLayout
                android:id="@+id/fl_goods_jjgg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11">

                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:id="@+id/stv_goods_jjgg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择计价规格"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_8"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" />

                <ImageView
                    android:id="@+id/iv_goods_jjgg_arrow"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/dp_5_5"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5_5"
                    android:src="@drawable/selector_expand_arrow" />
            </FrameLayout>

        </com.stkj.common.ui.widget.linelayout.LineLinearLayout>

        <!-- 单价 -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_goods_qrcode_title"
                android:layout_width="@dimen/dp_78"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="*单价:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <com.stkj.common.ui.widget.shapelayout.ShapeEditText
                android:id="@+id/set_goods_qrcode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入单价"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="14"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_8"
                app:radiusT="@dimen/dp_4"
                app:strokeColorT="@color/color_E8EAED"
                app:strokeWidthT="@dimen/dp_0_5" />

        </com.stkj.common.ui.widget.linelayout.LineLinearLayout>

        <!-- 类型 -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_goods_lx_summary"
                android:layout_width="@dimen/dp_78"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="*类型:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <FrameLayout
                android:id="@+id/fl_goods_lx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11">

                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:id="@+id/goods_lx_summary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择类型"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_8"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" />

                <ImageView
                    android:id="@+id/iv_goods_lx_arrow"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/dp_5_5"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5_5"
                    android:src="@drawable/selector_expand_arrow" />
            </FrameLayout>

        </com.stkj.common.ui.widget.linelayout.LineLinearLayout>



        <!-- 分类 -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_goods_fl_summary"
                android:layout_width="@dimen/dp_78"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="*分类:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <FrameLayout
                android:id="@+id/fl_goods_fl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11">

                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:id="@+id/goods_fl_summary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择分类"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_8"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" />

                <ImageView
                    android:id="@+id/iv_goods_fl_arrow"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/dp_5_5"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5_5"
                    android:src="@drawable/selector_expand_arrow" />
            </FrameLayout>

        </com.stkj.common.ui.widget.linelayout.LineLinearLayout>

        <!-- 套餐菜品 -->
        <LinearLayout
            android:id="@+id/layout_tc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_19"
            android:minHeight="@dimen/dp_19"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            app:line_bottom="true"
            app:line_color="@color/color_E8EAED"
            app:line_width="@dimen/dp_0">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_goods_tc_summary"
                android:layout_width="@dimen/dp_78"
                android:layout_height="@dimen/dp_19"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_10"
                android:text="套餐菜品:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"
                app:solidColorT="@color/white"
                app:topLeftRadiusT="@dimen/dp_4" />

            <FrameLayout
                android:id="@+id/fl_goods_tc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11">

                <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
                    android:id="@+id/goods_tc_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center_vertical"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" >

                    <com.st.flowlayout.TagFlowLayout
                        android:id="@+id/flowlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:textBackground="@drawable/bg_flow_gray"/>

                    <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                        android:id="@+id/flowlayout_empty"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_19"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请选择套餐"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/sp_8"
                        android:visibility="visible" />

                </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

                <ImageView
                    android:id="@+id/iv_goods_tc_arrow"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="right|center_vertical"
                    android:paddingTop="@dimen/dp_5_5"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5_5"
                    android:src="@drawable/selector_expand_arrow" />
            </FrameLayout>

        </LinearLayout>


        <!-- 排序 -->
        <com.stkj.common.ui.widget.linelayout.LineLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:gravity="center_vertical"
