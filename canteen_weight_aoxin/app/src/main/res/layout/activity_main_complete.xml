<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light_gray"
    tools:context=".CheckActivity">

    <!-- 头部导航栏 -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/order_review_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="32dp" />

    </LinearLayout>

    <!-- 主体内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 左侧分类菜单 -->
        <include layout="@layout/layout_category_menu" />

        <!-- 中间内容区域 -->
        <include layout="@layout/layout_main_content" />

        <!-- 右侧复核详情 -->
        <include layout="@layout/layout_review_details" />

    </LinearLayout>

    <!-- 底部操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/background_white"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="@string/cancel"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/button_outline_gray"
            android:layout_marginRight="16dp" />

        <Button
            android:id="@+id/btn_return_exchange"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="@string/return_exchange"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/button_filled_blue" />

    </LinearLayout>

</LinearLayout>