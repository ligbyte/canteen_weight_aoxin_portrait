<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_88000000"
    android:clickable="true">

    <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        app:radiusT="@dimen/dp_5"
        app:solidColorT="@color/color_161E35">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_alert_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="left"
            android:background="@null"
            android:includeFontPadding="false"
            android:hint="请输入管理员密码"
            android:inputType="textPassword"
            android:textColorHint="#80ffffff"
            android:maxHeight="@dimen/dp_100"
            android:scrollbarSize="@dimen/dp_2"
            android:scrollbarThumbVertical="@drawable/shape_scroll_bar_style"
            android:scrollbars="vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#1AFFFFFF" />

        <TextView
            android:id="@+id/tv_pwd_error_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:gravity="left"
            android:text="密码错误请重新输入"
            android:textColor="#FA5151"
            android:textSize="@dimen/sp_8"
            android:background="@null"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stv_left_bt"
                android:layout_width="@dimen/dp_79"
                android:layout_height="@dimen/dp_27"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:background="@drawable/btn_gradient_bottom_to_top"/>

            <TextView
                android:id="@+id/stv_right_bt"
                android:layout_width="@dimen/dp_79"
                android:layout_height="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_11"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:background="@drawable/btn_dialog_cancle" />
        </LinearLayout>
    </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

</FrameLayout>