<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:radiusT="@dimen/dp_6"
        app:solidColorT="@color/white">

        <!-- 新增商品标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_add_goods_back"
                android:layout_width="@dimen/dp_37"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_11"
                android:paddingRight="@dimen/dp_11"
                android:src="@mipmap/icon_back_arrow" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_cancel_add"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_23"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_259AFE"
                android:textSize="@dimen/sp_9"
                android:textStyle="bold"
                app:radiusT="@dimen/dp_4"
                app:strokeColorT="@color/color_0087FA"
                app:strokeWidthT="@dimen/dp_0_5" />

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:visibility="gone"
                android:id="@+id/stv_continue_add"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_9"
                android:gravity="center"
                android:text="刷新"
                android:textColor="@color/color_259AFE"
                android:textSize="@dimen/sp_9"
                android:textStyle="bold"
                app:radiusT="@dimen/dp_4"
                app:strokeColorT="@color/color_0087FA"
                app:strokeWidthT="@dimen/dp_0_5" />

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_save_storage"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginRight="@dimen/dp_11"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_9"
                android:textStyle="bold"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="@color/color_0087FA" />
        </LinearLayout>

        <!-- 商品信息标题 -->
        <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            app:radiusT="@dimen/dp_4"
            app:solidColorT="#EDF0F5" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <com.stkj.common.ui.widget.shapelayout.ShapeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="选择退款商品"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_9"
            android:textStyle="bold"/>

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_refund_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="退款记录 >"
                android:textColor="@color/color_0087FA"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal"/>

            </RelativeLayout>
        </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>
        <!-- 商品库标题 -->
        <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            app:radiusT="@dimen/dp_3"
            app:solidColorT="@color/color_D3EAFF">

            <LinearLayout
                android:id="@+id/ll_select_all"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_select_all"
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_goods_unselect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="全选"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_9"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:singleLine="true"
                android:text="商品名称"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal" />


            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="商品件数"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="商品单价"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="已退款件数"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="已退金额(元)"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_10"
                android:text="可退款件数"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="可退款金额(元)"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_9"
                android:textStyle="normal" />

        </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null">

        <!-- 商品库列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_goods_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_above="@+id/rl_bottom"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:background="@color/color_EDF0F5">

            <TextView
                android:id="@+id/tv_goods_total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="合计"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_9"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@color/color_EDF0F5">

                    <TextView
                        android:id="@+id/yingshou_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="退款总件数:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tv_total_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/yingshou_summary"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="0"
                        android:textColor="@color/color_0087FA"
                        android:textSize="@dimen/sp_9"
                        android:textStyle="bold" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/color_EDF0F5">

                    <TextView
                        android:id="@+id/shishou_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="退款总金额:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tv_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/shishou_summary"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="￥ 0.00"
                        android:textColor="@color/color_0087FA"
                        android:textSize="@dimen/sp_9"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>

        </RelativeLayout>
    </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

</FrameLayout>