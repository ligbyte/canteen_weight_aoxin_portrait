                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@color/color_EDF0F5">

                    <TextView
                        android:id="@+id/tv_show_total_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="共 0 件商品"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_9"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@color/color_EDF0F5">

                            <TextView
                                android:id="@+id/tv_show_yingshou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_2"
                                android:text="应收：￥ 0.00"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_9" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_EDF0F5">

                            <TextView
                                android:id="@+id/shishou_summary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="实收："
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_9"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_show_shishou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_toRightOf="@+id/shishou_summary"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:text="￥ 0.00"
                                android:textColor="#FF3C30"
                                android:textSize="@dimen/sp_8"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

        </com.stkj.common.ui.widget.shapelayout.ShapeFrameLayout>
        <!-- 人脸识别和提示区域 -->
